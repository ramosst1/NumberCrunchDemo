@model NumberCrunchDemo.Models.NumberCrunchModel

@{
    ViewData["Title"] = "Number Crunch Step 1";
}

<h4>Number Crunch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NumberCrunchStep1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SampleMaxCount" class="control-label"></label>
                <input asp-for="SampleMaxCount" class="form-control" />
                <span asp-validation-for="SampleMaxCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientScore" class="control-label"></label>
                <input asp-for="PatientScore" class="form-control" />
                <span asp-validation-for="PatientScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorScore" class="control-label"></label>
                <input asp-for="DoctorScore" class="form-control" />
                <span asp-validation-for="DoctorScore" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

